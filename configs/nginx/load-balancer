# ============================================
# CONFIGURACIÓN COMPLETA DE BALANCEO DE CARGA
# Proyecto: Balanceo con Nginx
# Fecha: 2025
# ============================================

# Rate limiting para protección DoS
limit_req_zone $binary_remote_addr zone=limitbyaddr:10m rate=10r/s;
limit_req_zone $server_name zone=limitbyserver:10m rate=100r/s;
limit_req_status 429;

# Cache de respuestas del backend
proxy_cache_path /var/cache/nginx/backend 
                 levels=1:2 
                 keys_zone=backcache:10m 
                 max_size=100m 
                 inactive=60m 
                 use_temp_path=off;

# Definición del pool de backends
upstream backend_servers {
    # Algoritmo: Least Connections (mejor para cargas variables)
    least_conn;
    
    # Keepalive para reutilizar conexiones TCP
    keepalive 32;
    keepalive_timeout 60s;
    keepalive_requests 100;
    
    # Servidores backend con health checks y slow start
    # slow_start: tiempo de "calentamiento" tras recuperarse de fallo
    server 172.31.29.202:8080 max_fails=3 fail_timeout=30s weight=2;
    server 172.31.25.94:8081 max_fails=3 fail_timeout=30s weight=2;
    server 172.31.25.205:8082 max_fails=2 fail_timeout=20s backup;  # Servidor de respaldo
    
    # NOTA: slow_start requiere Nginx Plus o compilación con módulo
    # Para nginx estándar, omitir slow_start
}

# Configuración de logging personalizado
log_format load_balancer '$remote_addr - $remote_user [$time_local] '
                         '"$request" $status $body_bytes_sent '
                         '"$http_referer" "$http_user_agent" '
                         'upstream: $upstream_addr '
                         'response_time: $upstream_response_time '
                         'request_time: $request_time';

# ============================================
# SERVIDOR HTTP (Puerto 80)
# Redirige todo el tráfico a HTTPS
# ============================================
server {
    listen 80;
    listen [::]:80;
    server_name _;
    
    # Logs para tráfico HTTP
    access_log /var/log/nginx/http-access.log;
    error_log /var/log/nginx/http-error.log warn;
    
    # Permitir validación de Let's Encrypt
    location /.well-known/acme-challenge/ {
        root /var/www/html;
        allow all;
    }
    
    # Redirigir todo lo demás a HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# ============================================
# SERVIDOR HTTPS (Puerto 443)
# Configuración principal del load balancer
# ============================================
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name _;
    
    # ========== LOGGING ==========
    access_log /var/log/nginx/load-balancer-access.log load_balancer;
    error_log /var/log/nginx/load-balancer-error.log warn;
    
    # ========== SSL/TLS CONFIGURATION ==========
    ssl_certificate /etc/ssl/certs/nginx-selfsigned.crt;
    ssl_certificate_key /etc/ssl/private/nginx-selfsigned.key;
    ssl_dhparam /etc/ssl/certs/dhparam.pem;
    
    # Protocolos modernos solamente (TLS 1.2 y 1.3)
    ssl_protocols TLSv1.2 TLSv1.3;
    
    # Cifrados seguros (recomendados por Mozilla SSL Config Generator)
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305';
    ssl_prefer_server_ciphers off;  # Dejar que el cliente elija (mejor para TLS 1.3)
    
    # Sesiones SSL
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_session_tickets off;  # Deshabilitado por seguridad (evita ataques)
    
    # OCSP Stapling (mejora privacidad y velocidad)
    ssl_stapling on;
    ssl_stapling_verify on;
    ssl_trusted_certificate /etc/ssl/certs/nginx-selfsigned.crt;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;
    
    # ========== HEADERS DE SEGURIDAD ==========
    # HSTS: Forzar HTTPS por 1 año
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    
    # Prevenir clickjacking
    add_header X-Frame-Options "DENY" always;
    
    # Prevenir MIME-type sniffing
    add_header X-Content-Type-Options "nosniff" always;
    
    # Protección XSS básica
    add_header X-XSS-Protection "1; mode=block" always;
    
    # Política de referrer
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    
    # Content Security Policy (básico)
    add_header Content-Security-Policy "default-src 'self' 'unsafe-inline'" always;
    
    # ========== LÍMITES DEL CLIENTE ==========
    client_max_body_size 20M;  # Tamaño máximo de upload
    client_body_timeout 12s;
    client_header_timeout 12s;
    client_body_buffer_size 16k;
    
    # ========== COMPRESIÓN GZIP ==========
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_comp_level 6;
    gzip_types 
        text/plain 
        text/css 
        text/xml 
        text/javascript 
        application/json
        application/javascript
        application/x-javascript 
        application/xml+rss;
    gzip_proxied any;
    
    # ========== LOCATION: ROOT (/) ==========
    # Configuración principal del proxy
    location / {
        # Rate limiting: máximo 10 req/s por IP, burst de 20
        limit_req zone=limitbyaddr burst=20 nodelay;
        
        # Proxy pass al upstream
        proxy_pass http://backend_servers;
        
        # ===== HEADERS DEL PROXY =====
        # Preservar hostname original
        proxy_set_header Host $host;
        
        # IP real del cliente
        proxy_set_header X-Real-IP $remote_addr;
        
        # Cadena de proxies (si hay múltiples)
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        
        # Protocolo original (HTTP o HTTPS)
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Para keepalive connections
        proxy_set_header Connection "";
        proxy_http_version 1.1;
        
        # ===== TIMEOUTS =====
        proxy_connect_timeout 10s;   # Tiempo máximo para conectar al backend
        proxy_send_timeout 60s;      # Timeout de envío de request
        proxy_read_timeout 60s;      # Timeout de lectura de response
        
        # ===== BUFFERING =====
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_busy_buffers_size 8k;
        proxy_max_temp_file_size 1024m;
        
        # ===== CACHE DE RESPUESTAS =====
        proxy_cache backcache;
        proxy_cache_valid 200 302 5m;   # Cachear respuestas exitosas 5min
        proxy_cache_valid 404 1m;       # Cachear 404 por 1min
        proxy_cache_use_stale error timeout http_500 http_502 http_503;
        proxy_cache_lock on;
        proxy_cache_bypass $http_cache_control;
        add_header X-Cache-Status $upstream_cache_status;
        
        # ===== MANEJO DE ERRORES =====
        proxy_next_upstream error timeout invalid_header http_500 http_502 http_503;
        proxy_intercept_errors off;
    }
    
    # ========== LOCATION: /health ==========
    # Endpoint de health check del load balancer
    location /health {
        access_log off;
        return 200 "Load Balancer is healthy\n";
        add_header Content-Type text/plain;
    }
    
    # ========== LOCATION: /nginx_status ==========
    # Métricas de Nginx (solo localhost)
    location /nginx_status {
        stub_status on;
        access_log off;
        allow 127.0.0.1;
        deny all;
    }
    
    # ========== LOCATION: /backend_health ==========
    # Verificar salud de backends
    location /backend_health {
        access_log off;
        proxy_pass http://backend_servers/health;
        proxy_set_header Host $host;
    }
}
